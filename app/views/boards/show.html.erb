<div class="d-flex mt-4 md-4">
  <div class='ml-auto board__linkbox'>
    <%= link_to "一覧", boards_path, class:"btn btn-outline-dark" %>
    <%= link_to "編集", edit_board_path , class:"btn btn-outline-dark" %>
    <%= link_to "削除","/boards/#{@board.id}" , method: :delete, data: {confirm: '削除しますか？'}, class:"btn btn-outline-dark" %>
 </div>
</div>

<div class="card">
  <div class="card-body">
   <h4><%= simple_format(@board.title) %></h4>
  </div>

  <div class="card-body">
    <p class="card-text"><%= simple_format(@board.body) %></p>
    <p class="text-right font-weight-bold mr-10"><%= @board.name %></p>
  </div>
</div>
