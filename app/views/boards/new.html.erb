<div class="d-flex align-items-center">
  <h1>掲示板作成</h1>
  <div class="ml-auto boards__linkBox">
    <%= link_to "課題一覧", boards_path, class:"btn btn-outline-dark" %>
  </div>
</div>
<%= form_for @board do |f| %>


  <div class="form-group" >
    <%= f.label :name, "部品名" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :title, "課題" %>
    <%= f.text_area :title, class: "form-control", rows: 4 %>
  </div>

  <div class="form-group">
    <%= f.label :body, "対策" %>
    <%= f.text_area :body, class:"form-control", rows: 10 %>
  </div>

  <div class="form-group" >
    <%= f.label :responsible, "担当" %>
    <%= f.text_field :responsible, class: "form-control" %>
  </div>

  <div class="form-group" >
    <%= f.label :deadline, "期限" %>
    <%= f.text_field :deadline, class: "form-control" %>
  </div>

  <%= f.submit "保存", class: "btn btn-primary" %>

<% end %>
